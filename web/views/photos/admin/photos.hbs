<div class="container main">
  <h1 class="text-center mt-2 mb-2">{{t 'photos.admin.title'}}</h1>
  <div class="grid center">
    <div class="col md-6">
      <form action="{{url (concat '/admin/photos/create?_csrf=' csrf)}}" method="post" enctype="multipart/form-data">
        <input type="hidden" name="user" value="{{id}}">
        <label for="photos">
            {{t 'photos.admin.photos'}}
          <input type="file" name="photos" id="photos" multiple>
        </label>
        <input type="submit" class="btn primary center w-100" value="{{t 'photos.admin.submit'}}">
      </form>
    </div>
  </div>

  <div class="mt-3 masonry">
    <div class="col">
      {{#each (modulo photos 3 0)}}
        <div class="image">
          <img src="{{url this.url}}" alt="photo">
          {{#if this.liked}}
            <img class="heart-tag" src="{{url '/images/heart-solid.svg'}}" alt="liked">
          {{/if}}
          <div>
            <form action="{{url (concat '/admin/photos/delete/' this.id)}}" method="post">
              <input type="hidden" name="_csrf" value="{{../csrf}}">
              <input type="submit" class="btn primary w-100" value="{{t 'photos.admin.delete'}}">
            </form>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col">
      {{#each (modulo photos 3 1)}}
        <div class="image">
          <img src="{{url this.url}}" alt="photo">
          {{#if this.liked}}
            <img class="heart-tag" src="{{url '/images/heart-solid.svg'}}" alt="liked">
          {{/if}}
          <div>
            <form action="{{url (concat '/admin/photos/delete/' this.id)}}" method="post">
              <input type="hidden" name="_csrf" value="{{../csrf}}">
              <input type="submit" class="btn primary w-100" value="{{t 'photos.admin.delete'}}">
            </form>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col">
      {{#each (modulo photos 3 2)}}
        <div class="image">
          <img src="{{url this.url}}" alt="photo">
          {{#if this.liked}}
            <img class="heart-tag" src="{{url '/images/heart-solid.svg'}}" alt="liked">
          {{/if}}
          <div>
            <form action="{{url (concat '/admin/photos/delete/' this.id)}}" method="post">
              <input type="hidden" name="_csrf" value="{{../csrf}}">
              <input type="submit" class="btn primary w-100" value="{{t 'photos.admin.delete'}}">
            </form>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
