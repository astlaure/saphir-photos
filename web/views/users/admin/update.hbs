<div class="container main">
  <h1 class="text-center mt-2 mb-2">Update User</h1>
  {{#each messages}}
    <div class="alert">
      <p>{{this}}</p>
    </div>
  {{/each}}
  <div class="grid center">
    <div class="col md-8 lg-6">
      <form action="{{url (concat '/admin/users/update/' user.id)}}" method="post">
        <input type="hidden" name="_csrf" value="{{ csrf }}">
        {{#with user}}
          <label for="name">
            Name
            <input type="text" name="name" id="name" value="{{name}}">
          </label>
          <label for="username">
            Username
            <input type="text" name="username" id="username" value="{{username}}">
          </label>
          <label for="password">
            Password
            <input type="password" name="password" id="password">
          </label>
        {{/with}}
        <input type="submit" class="btn primary center w-75" value="update">
      </form>
    </div>
  </div>
</div>
